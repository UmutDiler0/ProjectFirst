<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_kidness"
    tools:context=".screens.KidnessFragment">

    <app.rive.runtime.kotlin.RiveAnimationView
        android:id="@+id/kidnessAnimation"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_height="250dp"
        app:riveResource="@raw/gift" />

    <TextView
        android:id="@+id/kindnessTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kindnessText"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textSize="24sp"
        android:fontFamily="@font/nerko_one"
        android:textColor="@color/white"/>



</FrameLayout>