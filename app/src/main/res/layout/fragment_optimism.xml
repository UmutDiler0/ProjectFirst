<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradient_optimism"
    tools:context=".screens.OptimismFragment">

    <app.rive.runtime.kotlin.RiveAnimationView
        android:id="@+id/hapinessAnimation"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:layout_height="250dp"
        app:riveResource="@raw/gift" />

    <TextView
        android:id="@+id/hapinessTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hapinessText"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:fontFamily="@font/nerko_one"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"/>

</LinearLayout>